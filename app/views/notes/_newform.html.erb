<div class="container content">

    <%= form_for(note) do |f| %>
    <% if note.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(note.errors.count, "error") %>
            prohibited this note from being saved:</h2>

        <ul>
            <% note.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="field">
        <%= f.label :title, class:"label" %>
        <%= f.text_field :title, class:"input", id:"note-title" %>
    </div>

    <div class="field">
        <%= f.label :location, class:"label" %>
        <%= f.text_field :location, class:"input", id:"note-location" %>
    </div>

    <div class="field">
        <label class="label">Text</label>
        <%= f.text_area :text, class:"textarea"%>
    </div>

    <div class="actions">
        <%= f.submit 'Create New Note', class:"button is-primary"%>
        <%= link_to 'Back to Notes', notes_path, class:"button is-warning" %>
    </div>
    <% end %>

</div>
